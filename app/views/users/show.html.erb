<h2><%= @user.name %>'s Dashboard</h2>

<%= button_to "Discover Page", discover_user_path(@user) %>

<div id="parties">
  <h2>My Parties</h2>
  <% @parties.each do |party| %>
    <div class="party">
      <%= image_tag party.image_url, alt: party.title %>
      <%= party.title %>
      <%= party.datetime.strftime('%Y-%m-%d %H:%M') %>
      <% if party.user_id == @user.id %>
        <p>Hosting</p>
      <% else %>
        <p>Invited</p>
      <% end %>
    </div>
  <% end %>
</div>
