<h2><%= @movie.title %></h2>

<%= button_to "Discover Page", discover_user_path(@user) %>
<%= button_to "Create a viewing party for #{@movie.title}", new_movie_party_path(id: @user.id, movie_id: @movie.id) %>
<%= image_tag @movie.image_url, alt: @movie.title %>

<p>Vote: <%= @movie.vote_average %>
   Runtime: <%= @movie.runtime %> minutes
   Genre: <%= @movie.genres.join(', ') %>
</p>

<p>Summary: <%= @movie.summary %></p>

<div class="cast_members">
  <h2>Cast Members</h2>
  <% @movie.cast_members.each do |member| %>
    <p><%= member %></p>
  <% end %>
</div>

<div class="reviews">
  <h2>(<%= @movie.review_count %>) Reviews </h2>
  <% @movie.reviews.each do |review| %>
    <p><%= review %></p>
  <% end %>
</div>


